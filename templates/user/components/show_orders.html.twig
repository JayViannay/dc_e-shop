<div class="col-md-9">
    <div class="jumbotron mt-3">
        <h1 class="display-6 mb-3">Commandes :</h1>
        {% if app.user.orders | length > 0 %}
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Date</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for order in app.user.orders %}
                <tr>
                    <td><a href="{{ path('app_user_order_show', { 'id' : order.id }) }}">{{ order.id }}</a></td>
                    <td>{{ order.createdAt|date('d/m/Y') }}</td>
                    <td>{{ order.total }} €</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="alert alert-dark" role="alert">
            Vous n'avez jamais passé de commande chez nous.
        </div>
        {% endif %}
    </div>
</div>