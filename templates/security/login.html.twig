{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section id="login" class="container mt-5">
    <div class="col-8 mx-auto">
        <form method="post">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
            <div class="mb-3">
                Vous êtes déjà connecté.e en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
            {% endif %}
        
            <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
            </div>
            <div class="mb-3">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
                    required>
            
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="my-3 text-center">
                <button class="btn btn-sm btn-dark" type="submit">
                    Se connecter
                </button>
            </div>
            <p class="text-center">
                Vous n'avez pas encore de compte ? <br>
                <a href="{{ path('app_register')}}">Inscriver-vous ici !</a>
            </p>
        </form>
    </div>
</section>
{% endblock %}