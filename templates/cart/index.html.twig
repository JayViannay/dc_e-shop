{% extends 'base.html.twig' %}

{% block title %} - Cart{% endblock %}

{% block body %}
<div class="container">
    <div class="jumbotron mt-3">
        <h1 class="display-6 mb-3">Cart :</h1>
        {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Image</th>
                    <th>Size</th>
                    <th>Color</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                <tr>
                    <td>{{ item.article.reference.title }}</td>
                    <td><img src="{{ item.article.reference.image }}" alt="lorem ipsum" width="64px" height="64px"></td>
                    <td>{{ item.article.size.name }}</td>
                    <td>{{ item.article.color.name }}</td>
                    <td>{{ item.article.reference.price.amount }} $</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.article.reference.price.amount * item.quantity }} $</td>
                    <td><a href="{{ path('shop_cart_remove', { 'id': item.article.id })}}" class="btn btn-danger btn-sm">remove</a></td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right">Total : </td>
                    <td>{{ total }} $</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        {% else %}
        <div class="alert alert-dark" role="alert">
            Cart is empty
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}